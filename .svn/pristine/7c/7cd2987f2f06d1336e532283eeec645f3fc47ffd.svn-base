body{
	min-width:1200px;
}
.item{
	width:1200px;
	margin:0 auto;
	min-width:1200px;
}
.header-c{
	width:100%;
	height:58px;
	background:#fff;
	position:fixed;
	top:0;
 	left:0;
 	z-index:1000;
}
.header{
	height:68px;
	position:relative;
	z-index:1000;
}
.header>div{
	float:left;
}
.header .logo{
	width:283px;
}
.header .logo img{ 
	margin-top:16px;
}
.header .right{
	width:917px;
	height:68px;
}
.header .right .ileft{
	width:565px;
	float:left;
}

.header .ileft a{
	float:left;
	font-size:18px;
	display:block;
	width:72px;
	margin:0 30px;
	height:44px;
	line-height:44px;
	text-align:center;
	border-bottom:4px solid #fff;
	color:#000;
	margin-top:10px;
	font-weight:600;
}
.header .ileft a.on{
	color:#008dff;
	border-bottom:4px solid #008dff;
}

.header .right .iright{
	width:141px;
	float:right;
	margin-top:18px;
}
.header  .iright >a{
	display:block;
	height:32px;
	width:78px;
	line-height:32px;
	font-size:14px;
	text-align:center;
	color:#333333;
	border:1px solid #333333;
}
.usercon{
	overflow:hidden;
}
.usercon a{
	display:block;
	height:32px;
	line-height:32px;
	width:139px;
	text-align:center;
	border:1px solid #000;
	font-size:14px;
	background:#fff;
	color:#000;
}
.usercon >a{
	background:url(../../images/frontend/user/userlg.png) no-repeat center center;
	text-indent:20px;
	text-align:left;
}
.usercon ul{
	margin-top:8px;
	display:none;
}
.usercon li a{
	color:#008dff;
}
.usercon li:last-child{
	margin-top:-1px;
}
.main{
	margin-top:68px;
}